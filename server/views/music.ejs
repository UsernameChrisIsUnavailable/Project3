<%- include partials/header.ejs %>
<%- include partials/top_nav.ejs %>
<!--Main content-->
<main>
            <div class="jumbotron">
            <h1 class="display-4"><p>Welcome to Chris' <%= title %> page!</p></h1>
            
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
            </div>


<div class ="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <br>
    <table class="table table-bordered table-striped table-hover">
    <tr>
        <th class="text-center col-2">Song</th>  
        <th class="text-center col-2">Artist</th>   
        <th class="text-center col-1">Year</th>   
        <th class="text-center col-2">Genre</th>   
        <th class="text-center col-1">Rating</th>   
    </tr>

    <!--repeats the template-->
    <% for(let count=0; count<musiclist.length; count++) { %>
        <tr class = "d-flex">
            <td class="text-center col-2"><%= musiclist[count].Song %></td>
            <td class="text-center col-2"><%= musiclist[count].Artist %></td>
            <td class="text-center col-1"><%= musiclist[count].Year %></td>
            <td class="text-center col-2"><%= musiclist[count].Genre %></td>
            <td class="text-center col-1"><%= musiclist[count].Rating %></td>
        </tr>
    <%} %>
 </table>
</div>

</main>

<%- include partials/bot_nav.ejs %>
  
    <!--these are the script files-->
    <script src = "config/app.js"></script>
    <script src = "config/db.js"></script>
    <script src = "/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src = "/jquery/dist/jquery.min.js"></script>
</body>
</html>
